<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Articles</title>
    <link href="/css/site.css" rel="stylesheet"> <!-- Ensure the correct path to your CSS file -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-5">
        <!-- Conditionally display error message if there's an error -->
        <% if (error) { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
        <% } %>

        <h1>Articles List</h1>

        <!-- Render the list of articles -->
        <% if (articles && articles.length > 0) { %>
            <table class="table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Category</th>
                    </tr>
                </thead>
                <tbody>
                    <% articles.forEach(function(article) { %>
                        <tr>
                            <td>
                                <!-- Link to individual article page -->
                                <a href="/article/<%= article.id %>"><%= article.title %></a>
                            </td>
                            <td>
                                <!-- Display category name (linked) -->
                                <a href="/articles?category=<%= article.categoryId %>">
                                    <%= article.categoryName %>
                                </a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <div class="alert alert-warning">
                No articles found.
            </div>
        <% } %>

    </div>

</body>
</html>
